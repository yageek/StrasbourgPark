<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/parking_status_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/parking_status_indicator"/>

    <TextView
        android:id="@+id/parking_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Parking name"
        android:layout_toRightOf="@id/parking_status_indicator"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/parking_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 places libres"
        android:layout_below="@id/parking_name"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/parking_name"
        android:padding="5dp"
        android:layout_marginTop="5dp"

        />


</RelativeLayout>
